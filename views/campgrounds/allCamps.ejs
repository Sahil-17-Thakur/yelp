
   <% layout('/layout/boilerplate') %> 
<div id="map"></div>

    <h1>All Campgrounds Lists</h1>
    <p><%=campLists.title %></p>
        <%for(let camp of campLists) {%>

            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                       <% if(camp.images.length>0){%>
                        <img crossorigin="anonymous"  class="img-fluid" src="<%=camp.images[0].url %>">
                        <%} else{%>
                            <img crossorigin="anonymous" class="img-fluid" src=" ">
                            <%}%>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=camp.title %> </h5>
                            
                        <p class="card-text"><%=camp.description %></p>
                         <p class="card-text">
                        <p class="text-muted"><%=camp.location %></p>
                          </p> 
                          <a class="btn btn-primary" href="/campgrounds/<%=camp._id %>">View <%=camp.title %></a>
                    </div>
                    </div>
                </div>
               </div>
        
        <% } %>

        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
            const campLists = {features:<%- JSON.stringify(campLists) %>}
          </script>

<script src="/javascript/clusterMap.js"></script>

   
